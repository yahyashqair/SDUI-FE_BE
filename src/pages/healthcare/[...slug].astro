---
/**
 * Healthcare Demo Shell
 *
 * Shared layout with navbar + sidebar that loads dynamic MFE content
 */
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import { RemoteRenderer } from "../../sdui/RemoteRenderer";

// Get the page slug from URL
const slug = Astro.params.slug || "dashboard";
const path = "/" + (Array.isArray(slug) ? slug.join("/") : slug);

// Fetch the MFE spec from Route Registry
let mfeSpec = null;
let routeError = null;

try {
    const apiUrl = new URL("/api/routes", Astro.url);
    apiUrl.searchParams.set("path", path);

    const res = await fetch(apiUrl.toString());
    if (res.ok) {
        const data = await res.json();
        mfeSpec = data.mfe;
    } else {
        routeError = "Page not found";
    }
} catch (e) {
    routeError = "Failed to load page";
}

// Navigation items
const navItems = [
    { name: "Dashboard", path: "/healthcare/hc-dashboard", icon: "üìä" },
    { name: "Patients", path: "/healthcare/hc-patients", icon: "üë•" },
    { name: "Appointments", path: "/healthcare/hc-appointments", icon: "üìÖ" },
    { name: "Records", path: "/healthcare/hc-records", icon: "üìã" },
    { name: "Settings", path: "/healthcare/hc-settings", icon: "‚öôÔ∏è" },
];
---

<Layout title="MediCare Pro - Healthcare Platform">
    <div class="healthcare-shell">
        <!-- Top Navbar -->
        <header class="navbar">
            <div class="navbar-brand">
                <span class="logo">üè•</span>
                <span class="brand-name">MediCare Pro</span>
            </div>
            <nav class="navbar-menu">
                <a href="/healthcare/hc-dashboard" class="nav-link">Home</a>
                <a href="/app/builder" class="nav-link">AI Builder</a>
            </nav>
            <div class="navbar-user">
                <span class="user-avatar">üë®‚Äç‚öïÔ∏è</span>
                <span class="user-name">Dr. Smith</span>
            </div>
        </header>

        <div class="main-container">
            <!-- Sidebar -->
            <aside class="sidebar">
                <nav class="sidebar-nav">
                    {
                        navItems.map((item) => (
                            <a
                                href={item.path}
                                class:list={[
                                    "sidebar-link",
                                    {
                                        active: path.includes(
                                            item.path.split("/").pop() || "",
                                        ),
                                    },
                                ]}
                            >
                                <span class="sidebar-icon">{item.icon}</span>
                                <span class="sidebar-text">{item.name}</span>
                            </a>
                        ))
                    }
                </nav>
                <div class="sidebar-footer">
                    <div class="quick-stats">
                        <div class="stat">
                            <span class="stat-value">24</span>
                            <span class="stat-label">Today</span>
                        </div>
                        <div class="stat">
                            <span class="stat-value">156</span>
                            <span class="stat-label">Week</span>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Dynamic Content Area -->
            <main class="content">
                {
                    mfeSpec ? (
                        <RemoteRenderer mfeSpec={mfeSpec} client:only="react" />
                    ) : (
                        <div class="error-page">
                            <h1>Page Not Found</h1>
                            <p>
                                {routeError ||
                                    "The requested page could not be loaded."}
                            </p>
                            <a
                                href="/healthcare/hc-dashboard"
                                class="btn-primary"
                            >
                                Go to Dashboard
                            </a>
                        </div>
                    )
                }
            </main>
        </div>
    </div>
</Layout>

